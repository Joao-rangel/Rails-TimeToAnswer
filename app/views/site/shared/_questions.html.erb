<% @questions.each do |question| %>
  <div class="container pb-4">
    <div class="card">
      <h4 class="card-header bg-secondary text-white"><%= question.description %></h4>
      <div class="card-body">
        <h5 class="card-title"><%= question.subject.description %></h5>
        <ul>
          <% question.answers.each do |answer| %>
            <li><%= answer.description %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
<div class="container-fluid">
<div class="row justify-content-center">
  <%= paginate @questions %>
</div>
</div>