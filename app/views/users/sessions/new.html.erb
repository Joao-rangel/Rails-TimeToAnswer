<div class="p-5">
  <div class="text-center">
    <h1 class="h4 text-gray-800 mb-4">Bem vindo!</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"user"}) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control form-control-user" %>
    </div>
    
    <div class="form-group">
      <%= f.password_field :password, placeholder:"Senha", class:"form-control form-control-user" %>
    </div>

    <div class="form-group">
      <% if devise_mapping.rememberable? %>
        <div class="custom-control custom-checkbox small">
          <%= f.check_box :remember_me, class:"custom-control-input" %>
          <%= f.label :remember_me, class:"custom-control-label" %>
        </div>
      <% end %>
    </div>

    <%= f.submit "Log in", class:"btn btn-danger btn-user btn-block" %>

  <% end %>

  <hr>
  <div class="text-center">
    <%= link_to 'Esqueceu sua senha?', new_user_password_path, class:"small" %>
  </div>
  <div class="text-center mt-1">
    <%= link_to 'Criar conta!', new_user_registration_path, class:"small" %>
  </div>
</div>