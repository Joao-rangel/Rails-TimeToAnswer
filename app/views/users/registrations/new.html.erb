
<div class="p-5">
  <div class="text-center">
    <h1 class="h4 text-gray-800 mb-4">Cadastre-se!</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"user"})  do |f| %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control form-control-user" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder:"Nova Senha", class:"form-control form-control-user" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder:"Confirmar Senha", class:"form-control form-control-user" %>
    </div>

    <%= f.submit "Criar conta", class:"btn btn-danger btn-user btn-block" %>
    
  <% end %>

  <hr>
  <div class="text-center">
    <%= link_to 'JÃ¡ sou cadastrado!', new_user_session_path, class:"small" %>
  </div>
</div>
