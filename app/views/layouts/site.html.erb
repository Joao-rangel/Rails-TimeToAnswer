<!DOCTYPE html>
<html>

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

    <title>TimeToAnswer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'site' %>

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <%= link_to 'Time To Answer', root_path, class:"navbar-brand" %>

      <%# form search - method get para aparecer na url %>
      <%= form_with(url: site_search_path, local: true, method: :get, class:"form-inline mr-auto mx-2 navbar-form") do |form| %>
        <div class="input-group">
          <%= form.text_field :term, class:"form-control", placeholder:"Procurar..." %>
          <div class="input-group-append">
            <button class="btn btn-primary" type="submit">
              <i class="fa fa-search fa-fw"></i>
            </button>
          </div>
        </div>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <%= link_to 'Home', root_path, class:"nav-link active" %>
          <% unless user_signed_in? %> 
            <%= link_to 'Entrar', new_user_session_path, class:"nav-link" %>
            <%= link_to 'Cadastro', new_user_registration_path, class:"nav-link" %>
          <% else %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %></a>
              <div class="dropdown-menu">
                <%= link_to users_backoffice_welcome_index_path, class:"dropdown-item" do %>
                  <i class="fa fa-user fa-fw"></i> Perfil
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to destroy_user_session_path, method: :delete, class:"dropdown-item" do %>
                  <i class="fa fa-sign-out fa-fw"></i> Sair
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Image Section - set the background image for the header in the line below -->
  <section class="py-5 bg-image-full" style="background-image: url('https://images-americanas.b2w.io/produtos/01/00/images/94770/2/94770293_1GG.jpg');">
    <section class="container">  
      <div class="card py-4 px-5 mt-5" style="width: 33rem;">
        <h3><%= params[:term] ? "Resultados para a busca: \"#{params[:term]}\"" : 'Ultimas perguntas cadastradas.' %></h3>
      </div>
    </section>
    <div style="height: 80px;"></div>
  </section>
  
  <section class="py-1 bg-dark"></section>

  <!-- Content section -->
  <section class="pt-5">
  <%= yield %>
  </section>

  <!-- Footer -->
  <footer class="py-4 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Jo√£o Rangel 2020</p>
    </div>
    <!-- /.container -->
  </footer>

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'site' %>

  <% if flash %>
    <% flash.each do |key, value| %>
      <%= javascript_tag do %>
        $.bootstrapGrowl('<%= value %>', {type: 'info', align: 'center', width: 'auto'});
      <% end %>
    <% end %>
  <% end %>
</body>

</html>
