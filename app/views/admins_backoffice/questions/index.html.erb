<!-- DataTales -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Quest천es</h6>
  </div>
  <div class="card-body table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>#</th>
          <th>T처pico</th>
          <th>Quest찾o</th>
          <th><%# criar novo %>
            <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-block" do %>
                <i class="fas fa-user-plus" style="white"></i> Novo
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td style="width: 65px"><%= question.id %></td>
          <td style="width: 113px"><%= question.subject.description %></td>
          <td><%= question.description %></td>
          <td style="width: 113px">
            <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %><%# editar %>
                <i class="fas fa-edit" style="white"></i>
            <% end %>
            <%# excluir %>
            <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Deseja realmente excluir a quest찾o #{question.description}?"} do %>
                <i class="fas fa-trash-alt" style="white"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>